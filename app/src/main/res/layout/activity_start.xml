<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:layoutDirection="ltr"
    tools:context=".activities.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/dot_and_box_bg_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_size_bg_new"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/mHeading.H4"
                android:layout_width="200dp"
                android:gravity="center"
                android:id="@+id/tvGridSize"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/grid_size"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn44"
                    style="@style/mHeading.H4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/grid_size_selector"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp"
                    android:text="4X4"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/btn66"
                    style="@style/mHeading.H4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/grid_size_selector"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp"
                    android:text="6X6"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/btn88"
                    style="@style/mHeading.H4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/grid_size_selector"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="16dp"
                    android:text="8X8"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/play_with_fr_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_friend" />

            <TextView
                android:id="@+id/tvPlayWithFriend"
                style="@style/mHeading.H3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/play_with_friends"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnComputer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/play_with_computer_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_computer" />

            <TextView
                android:id="@+id/tvPlayWithAI"
                style="@style/mHeading.H3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/play_with_ai"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSetting"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/setting_bg"
                android:padding="8dp"
                android:src="@drawable/ic_setting" />

            <Space
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/btnGuide"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/setting_bg"
                android:padding="8dp"
                android:src="@drawable/ic_guide" />
        </LinearLayout>


    </LinearLayout>


