<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BaseProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BaseProject" parent="Base.Theme.BaseProject" />

    <style name="singleLineTxt">
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="mHeading" parent="singleLineTxt" />

    <style name="Display">
        <item name="fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="mHeading.H1" parent="mHeading">
        <item name="android:fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="mHeading.H2" parent="mHeading">
        <item name="android:fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mHeading.H3" parent="mHeading">
        <item name="android:fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="mHeading.H4" parent="mHeading">
        <item name="android:fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Sub" parent="singleLineTxt" />

    <style name="Sub.s1" parent="Sub">
        <item name="fontFamily">@font/hvdtrial_mikado_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Sub.s2" parent="Sub">
        <item name="fontFamily">@font/hvdtrial_mikado_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Sub.s3" parent="Sub">
        <item name="fontFamily">@font/hvdtrial_mikado_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body" parent="singleLineTxt"/>

    <style name="Body.L" parent="Body">
        <item name="fontFamily">@font/hvdtrial_mikado_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.M" parent="Body">
        <item name="fontFamily">@font/hvdtrial_mikado_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.S" parent="Body">
        <item name="fontFamily">@font/hvdtrial_mikado_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="singleLineTxt"/>

    <style name="Button.L" parent="Button">
        <item name="fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.M" parent="Button">
        <item name="fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.S" parent="Button">
        <item name="fontFamily">@font/hvdtrial_mikado_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>